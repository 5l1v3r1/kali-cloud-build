#!/bin/bash
# Set locale
chroot $imagedir apt-get install -y --force-yes locales
sed -i 's/# en_US.UTF-8 UTF-8/en_US.UTF-8 UTF-8/' $imagedir/etc/locale.gen
chroot $imagedir dpkg-reconfigure --priority=critical locales

# Set timezone
echo $timezone >$imagedir/etc/timezone
/bin/cp -f $imagedir/usr/share/zoneinfo/$timezone $imagedir/etc/localtime
